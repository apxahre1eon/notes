version: "3"

services:

  zabbix-mariadb:
    container_name: zabbix-mariadb
    image: mariadb
    restart: always
    ports:
      - "9482:3306"
    environment:
      - MARIADB_ROOT_PASSWORD=zabbix
      - MARIADB_DATABASE=zabbix
    volumes:
      - /docker_volume/zabbix/mariadb:/var/lib/mysql

  zabbix-server:
    container_name: zabbix-server
    image: zabbix/zabbix-server-mysql
    restart: always
    ports:
      - "10051:10051"
    environment:
      - DB_SERVER_HOST=zabbix-mariadb
      - DB_SERVER_PORT=3306
      - MYSQL_DATABASE=zabbix
      - MYSQL_USER=root
      - MYSQL_PASSWORD=zabbix
    volumes:
      - /docker_volume/zabbix/zabbix-server-export:/var/lib/zabbix/export
      - /docker_volume/zabbix/zabbix-server-snmptraps:/var/lib/zabbix/snmptraps
    depends_on:
      - zabbix-mariadb

  zabbix-web:
    container_name: zabbix-web
    image: zabbix/zabbix-web-apache-mysql
    restart: always
    ports:
      - "9480:8080"
    environment:
      - ZBX_SERVER_HOST=zabbix-server
      - ZBX_SERVER_PORT=10051
      - DB_SERVER_HOST=zabbix-mariadb
      - DB_SERVER_PORT=3306
      - MYSQL_DATABASE=zabbix
      - MYSQL_USER=root
      - MYSQL_PASSWORD=zabbix
      - TZ=Europe/Moscow

    depends_on:
      - zabbix-mariadb
      - zabbix-server
